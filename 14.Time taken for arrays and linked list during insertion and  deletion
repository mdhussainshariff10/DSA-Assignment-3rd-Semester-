#include <stdio.h> 
#include <time.h> 
 
int main() 
{ 
    int a[50], n, i, pos; 
    clock_t t1, t2; 
 
    printf("Enter size: "); 
    scanf("%d", &n); 
 
    printf("Enter elements:\n"); 
    for (i = 0; i < n; i++) 
        scanf("%d", &a[i]); 
 
    printf("Enter position to insert: "); 
    scanf("%d", &pos); 
 
    t1 = clock(); 
    for (i = n; i >= pos; i--) 
        a[i] = a[i - 1]; 
    n++; 
    t2 = clock(); 
 
    printf("Insertion time: %f\n", (double)(t2 - t1) / CLOCKS_PER_SEC); 
 
    printf("Enter position to delete: "); 
    scanf("%d", &pos); 
 
    t1 = clock(); 
    for (i = pos - 1; i < n - 1; i++) 
        a[i] = a[i + 1]; 
    n--; 
    t2 = clock(); 
 
    printf("Deletion time: %f\n", (double)(t2 - t1) / CLOCKS_PER_SEC); 
    system("getmac"); 
    return 0; 
} 
