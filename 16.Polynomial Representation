#include <stdio.h> 
#include <stdlib.h> 
 
struct node 
{ 
    int coeff; 
    int exp; 
    struct node *next; 
}; 
 
int main() 
{ 
    struct node *head = NULL, *temp, *newnode; 
    int n, i; 
 
    printf("Enter number of terms: "); 
    scanf("%d", &n); 
 
    for (i = 0; i < n; i++) 
    { 
        newnode = malloc(sizeof(struct node)); 
 
        printf("Enter coefficient: "); 
        scanf("%d", &newnode->coeff); 
 
        printf("Enter exponent: "); 
        scanf("%d", &newnode->exp); 
 
        newnode->next = NULL; 
 
        if (head == NULL) 
        { 
            head = newnode; 
            temp = newnode; 
        } 
        else 
        { 
            temp->next = newnode; 
            temp = newnode; 
        } 
    } 
 
    temp = head; 
    while (temp != NULL) 
    { 
        printf("%dx^%d", temp->coeff, temp->exp); 
        if (temp->next != NULL) 
            printf(" + "); 
        temp = temp->next; 
    } 
    system("getmac"); 
 
    return 0; 
} 
