
Code 
#include <stdio.h> 
#include <stdlib.h> 
 
struct node 
{ 
    int data; 
    struct node *next; 
}; 
 
struct node *adj[10]; 
int visited[10], queue[10]; 
int front = 0, rear = -1, n; 
 
void bfs(int start) 
{ 
    struct node *p; 
 
    queue[++rear] = start; 
    visited[start] = 1; 
 
    while (front <= rear) 
    { 
        start = queue[front++]; 
        printf("%d ", start); 
 
        p = adj[start]; 
        while (p != NULL) 
        { 
            if (!visited[p->data]) 
            { 
                queue[++rear] = p->data; 
                visited[p->data] = 1; 
            } 
            p = p->next; 
        } 
    } 
} 
 
int main() 
{ 
    int i, e, u, v, start; 
 
    printf("Enter number of nodes: "); 
    scanf("%d", &n); 
 
    for (i = 1; i <= n; i++) 
    { 
        adj[i] = NULL; 
        visited[i] = 0; 
    } 
 
    printf("Enter number of edges: "); 
    scanf("%d", &e); 
 
    for (i = 0; i < e; i++) 
    { 
        scanf("%d %d", &u, &v); 
 
        struct node *t = malloc(sizeof(struct node)); 
        t->data = v; 
        t->next = adj[u]; 
        adj[u] = t; 
    } 
 
    printf("Enter starting node: "); 
    scanf("%d", &start); 
 
    printf("BFS: "); 
    bfs(start); 
    system("getmac"); 
 
    return 0; 
} 
