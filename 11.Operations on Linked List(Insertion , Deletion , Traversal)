#include <stdio.h> 
#include <stdlib.h> 
 
struct node 
{ 
    int data; 
    struct node *next; 
}; 
 
int main() 
{ 
    struct node *head = NULL, *temp, *newnode, *prev; 
    int ch, x; 
 
    while (1) 
    { 
        printf("\n1 Insert"); 
        printf("\n2 Delete"); 
        printf("\n3 Traverse"); 
        printf("\n4 Exit"); 
        printf("\nEnter your choice: "); 
        scanf("%d", &ch); 
 
        switch (ch) 
        { 
            case 1: 
                newnode = malloc(sizeof(struct node)); 
                printf("Enter value: "); 
                scanf("%d", &newnode->data); 
                newnode->next = NULL; 
 
                if (head == NULL) 
                    head = newnode; 
                else 
                { 
                    temp = head; 
                    while (temp->next != NULL) 
                        temp = temp->next; 
                    temp->next = newnode; 
                } 
                break; 
 
            case 2: 
                if (head == NULL) 
                { 
                    printf("List Empty"); 
                    break; 
                } 
 
                printf("Enter value to delete: "); 
                scanf("%d", &x); 
 
                temp = head; 
                prev = NULL; 
 
                while (temp != NULL && temp->data != x) 
                { 
                    prev = temp; 
                    temp = temp->next; 
                } 
 
                if (temp == NULL) 
                    printf("Value not found"); 
                else 
                { 
                    if (prev == NULL) 
                        head = temp->next; 
                    else 
                        prev->next = temp->next; 
 
                    free(temp); 
                    printf("Deleted successfully"); 
                } 
                break; 
 
            case 3: 
                if (head == NULL) 
                    printf("List Empty"); 
                else 
                { 
                    temp = head; 
                    while (temp != NULL) 
                    { 
                        printf("%d ", temp->data); 
                        temp = temp->next; 
                    } 
                } 
                break; 
 
            case 4: 
                return 0; 
 
            default: 
                printf("Invalid choice"); 
        } 
    } 
}
